{% comment %}
  Auto-inject chat tooltip into theme with proper settings handling
{% endcomment %}

{{ 'wc_agent_tooltip.css' | asset_url | stylesheet_tag }}

<div
  class="wc-agent-tooltip"
  data-settings="{{ settings | json | escape }}"
  data-position="{{ settings.window_position | default: 'bottom-right' }}"
  data-draggable="{{ settings.enable_drag | default: false }}"
>
  <!-- Minimized Tooltip Button -->
  <div
    class="tooltip-button {% if settings.button_style %}{{ settings.button_style }}{% else %}rounded{% endif %}"
    id="tooltip-button"
    style="
      width: {% if settings.button_style == 'circle' %}{{ settings.button_size }}px{% endif %};
      height: {% if settings.button_style == 'circle' %}{{ settings.button_size }}px{% endif %};
    "
  >
    <div class="tooltip-icon">
      {% if settings.agent_avatar != blank %}
        <img
          src="{{ settings.agent_avatar | image_url: width: 60 }}"
          alt="{{ settings.agent_name | escape }}"
          class="agent-avatar"
          width="60"
          height="60"
        >
      {% else %}
        <div class="avatar-placeholder">
          {{- settings.agent_name | default: 'Agent' | slice: 0, 1 | upcase -}}
        </div>
      {% endif %}
    </div>
    <div class="tooltip-preview {% if settings.button_style == 'circle' %}hidden{% endif %}">
      <span>{{ settings.button_text | default: 'Speak to an Agent' }}</span>
    </div>
  </div>

  <!-- Expanded Chat Window -->
  <div class="tooltip-window">
    <!-- Header -->
    <div class="tooltip-header">
      <div class="agent-info">
        <div class="agent-avatar-small">
          {% if settings.agent_avatar != blank %}
            <img src="{{ settings.agent_avatar | image_url: width: 32, height: 32, crop: 'center' }}" alt="{{ settings.agent_name }}" width="32" height="32">
          {% else %}
            <div class="avatar-placeholder">{{ settings.agent_name | default: 'Agent' | slice: 0, 1 | upcase }}</div>
          {% endif %}
        </div>
        <div class="agent-details">
          <span class="agent-name">{{ settings.agent_name | default: 'Agent' }}</span>
          <span class="agent-status" id="agent-status">Online</span>
        </div>
      </div>
      <div class="header-controls">
        {% if settings.enable_voice %}
          <button class="control-button voice-toggle" id="voice-toggle" title="Switch to Voice">
            <svg viewBox="0 0 24 24">
              <path d="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3z"/>
              <path d="M17 11c0 2.76-2.24 5-5 5s-5-2.24-5-5H5c0 3.53 2.61 6.43 6 6.92V21h2v-3.08c3.39-.49 6-3.39 6-6.92h-2z"/>
            </svg>
          </button>
        {% endif %}
        <button class="control-button minimize" id="minimize-chat" title="Minimize">
          <svg viewBox="0 0 24 24">
            <path d="M19 13H5v-2h14v2z"/>
          </svg>
        </button>
        <button class="control-button close" id="close-chat" title="Close">
          <svg viewBox="0 0 24 24">
            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Chat Content -->
    <div class="tooltip-content">
      <div class="messages-container" id="messages-container">
        <!-- Messages will be inserted here -->
      </div>

      <!-- Typing Indicator -->
      <div class="typing-indicator">
        <span></span>
        <span></span>
        <span></span>
      </div>

      <!-- Voice Indicator -->
      {% if settings.enable_voice %}
        <div class="voice-indicator">
          <div class="voice-waves">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </div>
          <span class="voice-status">{{ settings.voice_welcome_message }}</span>
        </div>
      {% endif %}
    </div>

    <!-- Input Area -->
    <div class="input-area">
      <div class="input-container">
        <input
          type="text"
          class="message-input"
          id="message-input"
          placeholder="{{ settings.input_placeholder | default: 'Type your message...' }}"
          aria-label="Message"
        >
        <button class="send-button" id="send-button" title="Send Message">
          <svg viewBox="0 0 24 24">
            <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize settings with proper defaults and validation
  window.wcAgentSettings = (function() {
    const defaults = {
      primary_color: '#0055ff',
      secondary_color: '#f8f9fa',
      text_color: '#1a1a1a',
      message_color: '#ffffff',
      font_family: 'system',
      base_font_size: 14,
      font_weight: '400',
      button_style: 'rounded',
      button_size: 44,
      window_width: 380,
      window_height: 520,
      window_position: 'bottom-right',
      bubble_radius: 16,
      agent_name: 'Agent',
      welcome_message: 'Hi there! How can I help you today?',
      button_text: 'Speak to an Agent',
      input_placeholder: 'Type your message...',
      enable_voice: {{ settings.enable_voice | default: false | json }},
      enable_drag: {{ settings.enable_drag | default: false | json }}
    };

    // Get settings from liquid
    const liquidSettings = {
      {% for setting in settings %}
        {{ setting[0] | json }}: {{ setting[1] | json }},
      {% endfor %}
    };

    // Merge with proper type conversion
    return {
      ...defaults,
      ...liquidSettings,
      base_font_size: parseInt(liquidSettings.base_font_size || defaults.base_font_size),
      button_size: parseInt(liquidSettings.button_size || defaults.button_size),
      window_width: parseInt(liquidSettings.window_width || defaults.window_width),
      window_height: parseInt(liquidSettings.window_height || defaults.window_height),
      bubble_radius: parseInt(liquidSettings.bubble_radius || defaults.bubble_radius)
    };
  })();
</script>

<script src="{{ 'wc_agent_tooltip.js' | asset_url }}" defer></script>