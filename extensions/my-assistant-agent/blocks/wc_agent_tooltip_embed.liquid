{% schema %}
  {
    "name": "Agent Assistant Tooltip",
    "target": "body",
    "stylesheet": "wc_agent_tooltip.css",
    "javascript": "wc_agent_tooltip.js",
    "settings": [
      {
        "type": "header",
        "content": "Agent Settings"
      },
      {
        "type": "text",
        "id": "agent_name",
        "label": "Agent Name",
        "default": "Alex"
      },
      {
        "type": "image_picker",
        "id": "agent_avatar",
        "label": "Agent Avatar"
      },
      {
        "type": "text",
        "id": "welcome_message",
        "label": "Welcome Message",
        "default": "Hi there! How can I help you today?"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Speak to an Agent"
      },
      {
        "type": "header",
        "content": "Appearance"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#0055ff"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#f8f9fa"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#1a1a1a"
      },
      {
        "type": "select",
        "id": "font_family",
        "label": "Font",
        "options": [
          {"value": "system", "label": "System Default"},
          {"value": "helvetica", "label": "Helvetica"},
          {"value": "arial", "label": "Arial"}
        ],
        "default": "system"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "window_position",
        "label": "Window Position",
        "options": [
          {"value": "bottom-right", "label": "Bottom Right"},
          {"value": "bottom-left", "label": "Bottom Left"},
          {"value": "top-right", "label": "Top Right"},
          {"value": "top-left", "label": "Top Left"}
        ],
        "default": "bottom-right"
      },
      {
        "type": "range",
        "id": "window_width",
        "label": "Window Width",
        "min": 280,
        "max": 480,
        "step": 20,
        "default": 380,
        "unit": "px"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button Shape",
        "options": [
          {"value": "rounded", "label": "Rounded"},
          {"value": "pill", "label": "Pill"},
          {"value": "circle", "label": "Circle"}
        ],
        "default": "rounded"
      },
      {
        "type": "header",
        "content": "User Features"
      },
      {
        "type": "checkbox",
        "id": "enable_voice",
        "label": "Enable Voice Chat",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_drag",
        "label": "Allow Draggable Window",
        "default": true
      }
    ]
  }
  {% endschema %}

  {% assign settings = block.settings %}
  {% render 'wc_agent_tooltip' with settings %}